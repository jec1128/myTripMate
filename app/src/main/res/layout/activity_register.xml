<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#353132">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:text="Sign Up"
                android:layout_marginLeft="25dp"
                android:textSize="32dp"
                android:textColor="#fff"
                android:gravity="left"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_light"
                android:layout_marginTop="40dp"
                android:text="Thank you!"
                android:layout_marginLeft="25dp"
                android:textSize="32dp"
                android:textColor="#fff"
                android:gravity="left"
                android:includeFontPadding="false"/>

            <ImageView
                android:id="@+id/RegisterActivity_imageview_profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="right"
                android:src="@drawable/join_profile_add"
                android:layout_marginRight="35dp"
                android:layout_marginTop="16dp"
                />

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center">

            <FrameLayout
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp">

                <EditText
                    android:id="@+id/RegisterActivity_text_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:hint="사용할 아이디 입력하세요"
                    android:textSize="16dp"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#606060"
                    android:layout_marginRight="25dp"/>

                <Button
                    android:id="@+id/RegisterActivity_button_id_validate"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="30dp"
                    android:background="#353132"
                    android:text="중복 검사"
                    android:textColor="#ffffff"></Button>



            </FrameLayout>

            <EditText
                android:id="@+id/RegisterActivity_text_password"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:singleLine = "true"
                android:textSize="16dp"
                android:hint="사용할 패스워드 입력하세요"
                android:inputType="textPassword"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textColorHint="#606060"
                android:backgroundTint="#ffffff" />

            <FrameLayout
                android:layout_marginLeft="25dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp">

                <EditText
                    android:id="@+id/RegisterActivity_text_nickname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#ffffff"
                    android:hint="닉네임을 입력하세요"
                    android:textSize="16dp"
                    android:padding="15dp"
                    android:singleLine="true"
                    android:textColor="#ffffff"
                    android:textColorHint="#606060"
                    android:layout_marginRight="25dp" />

                <Button
                    android:id="@+id/RegisterActivity_button_nickname_validate"
                    android:layout_width="90dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="17dp"
                    android:layout_marginRight="30dp"
                    android:background="#353132"
                    android:text="중복 검사"
                    android:textColor="#ffffff">

                </Button>
            </FrameLayout>

            <RadioGroup
                android:id="@+id/RegisterActivity_group_gender"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="17dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/RegisterActivity_radio_man"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:checked="true"
                    android:textSize="18dp"
                    android:textColor="#fff"
                    android:text="남자" />

                <RadioButton
                    android:id="@+id/RegisterActivity_radio_woman"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="여자"
                    android:textColor="#fff"
                    android:textSize="18dp" />

            </RadioGroup>

            <EditText
                android:id="@+id/RegisterActivity_text_age"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:singleLine = "true"
                android:textSize="16dp"
                android:hint="나이를 입력하세요"
                android:inputType="number"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textColorHint="#606060"
                android:backgroundTint="#ffffff" />
            <EditText
                android:id="@+id/RegisterActivity_text_email"
                android:layout_width="match_parent"
                android:layout_marginLeft="25dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="25dp"
                android:singleLine = "true"
                android:textSize="16dp"
                android:hint="'tripmate@tripmate.com' 양식으로 입력하세요"
                android:inputType="textEmailAddress"
                android:padding="15dp"
                android:textColor="#ffffff"
                android:textColorHint="#606060"
                android:backgroundTint="#ffffff">
            </EditText>



