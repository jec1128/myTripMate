<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_cost"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_bottom">

        <ImageView
            android:id="@+id/cost_img"
            android:layout_width="36dp"
            android:layout_height="37dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_cost_category6" />

        <TextView
            android:id="@+id/cost_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:lineSpacingExtra="-0.6sp"
            android:paddingLeft="65dp"
            android:text="금오공대dddd"
            android:textColor="#243f4a"
            android:textSize="15sp" />


        <TextView
            android:id="@+id/cost_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="34dp"
            android:lineSpacingExtra="-0.6sp"
            android:text="50000"
            android:textColor="#243f4a"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="-0.6sp"
            android:text="원"
            android:textColor="#243f4a"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/cost_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="50dp"
            android:layout_marginRight="20dp"
            android:lineSpacingExtra="-0.6sp"
            android:text="현금"
            android:textSize="13sp" />

    </RelativeLayout>
</android.support.v7.widget.CardView>