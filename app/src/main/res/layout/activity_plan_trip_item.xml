<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/border_bottom"
        android:padding="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/img_arrow"
                android:background="@android:color/transparent"
                android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/trip_item_numbering"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:background="@drawable/circle_style"
                android:gravity="center"
                android:text="1"
                android:textColor="#fff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/trip_item_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:text="금오공과대학교"
                android:singleLine="true"
                android:textSize="23dp"
                android:includeFontPadding="false"
                android:layout_marginLeft="20dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:paddingLeft="70dp">

            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:textColor="#BCBCBC" android:includeFontPadding="false"
            android:text="총 비용 :  "/>

            <TextView android:id="@+id/trip_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:textColor="#BCBCBC"
            android:textSize="20dp" android:includeFontPadding="false"
            android:text="3500"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#BCBCBC"
                android:textSize="20dp"
                android:text="원"/>
        </LinearLayout>

        <LinearLayout
            android:paddingLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">

            <TextView
                android:id="@+id/trip_item_memo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:textSize="20dp"
                android:textColor="#D62A2A"
                android:includeFontPadding="false"
                android:text="오늘은 내가 짜파게티 요리사야!!"/>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/memo_add"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:lineSpacingExtra="-0.6sp"
                android:text="메모추가"
                android:textSize="10sp" />
        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
</LinearLayout>