<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/mainSerchBox"
            android:layout_gravity="center"
            android:layout_width="386dp"
            android:layout_height="35dp"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="12dp"
            android:background="#E6E6E6"
            android:gravity="center_vertical"
            android:hint="어디갈지 고민이 된다면 검색 해 보세요"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:lineSpacingExtra="39sp"
            android:paddingLeft="40dp"
            android:privateImeOptions="defaultInputmode=korean"
            android:textSize="12sp" />

        <ImageButton
            android:id="@+id/id_search_button"
            android:layout_width="7dp"
            android:layout_height="11dp"
            android:layout_alignLeft="@+id/mainSerchBox"
            android:layout_alignTop="@+id/mainSerchBox"
            android:layout_alignBottom="@+id/mainSerchBox"
            android:layout_marginLeft="11dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="3dp"
            android:adjustViewBounds="true"
            android:padding="0dp"
            android:scaleType="fitCenter"
            android:src="@drawable/img_main_serch" />
    </RelativeLayout>

    <ListView
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/mainListView">

    </ListView>

</LinearLayout>