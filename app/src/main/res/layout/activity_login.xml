<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/img_bg_dark">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_bold"
            android:text="Welcome Back"
            android:layout_marginLeft="68dp"
            android:textSize="32dp"
            android:layout_marginTop="120dp"
            android:textColor="#fff"
            android:gravity="left"
            android:includeFontPadding="false"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosans_light"
            android:text="TripMate"
            android:layout_marginLeft="68dp"
            android:textSize="32dp"
            android:layout_marginTop="-10dp"
            android:textColor="#fff"
            android:gravity="left"
            android:includeFontPadding="false"/>

        <EditText
            android:id="@+id/LoginActivity_text_id"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:textStyle="bold"
            android:hint="Your ID"
            android:inputType="text"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"/>

        <EditText
            android:id="@+id/LoginActivity_text_password"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:padding="15dp"
            android:singleLine="true"
            android:textColor="#ffffff"
            android:textColorHint="#ffffff"
            android:backgroundTint="#ffffff"/>

        <Button
            android:id="@+id/LoginActivity_button_login"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:backgroundTint="#fff"
            android:background="@drawable/round_style"
            android:text="Sing IN"
            style="?android:attr/borderlessButtonStyle"/>

        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:id="@+id/autoLoginCheck"
            android:text="자동 로그인"
            android:buttonTint="@color/colorWhite"
            android:textColor="#fff"/>


    </LinearLayout>
</LinearLayout>