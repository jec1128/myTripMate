<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right">

            <ImageButton
                android:id="@+id/img_tripshow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:src="@drawable/img_plan_showplan" />

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_img_board_write_location"/>

            <TextView
                android:id="@+id/tv_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경주"
                android:fontFamily="@font/notosans_bold"
                android:textColor="#3b3b3b"
                android:layout_marginLeft="10dp"
                android:textSize="25dp"
                android:includeFontPadding="false"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:lineSpacingExtra="100sp"
                android:text=" 가는 여정"
                android:includeFontPadding="false"
                android:textColor="#3b3b3b"
                android:textSize="25dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="45dp">

            <TextView
                android:id="@+id/tv_startday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="106sp"
                android:textColor="#444444"
                android:text="2019/01/01"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_regular"
                android:textSize="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="8dp"
                android:lineSpacingExtra="106sp"
                android:fontFamily="@font/notosans_regular"
                android:text="~"
                android:includeFontPadding="false"
                android:textColor="#444444"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_endday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#444444"
                android:text="2019/01/01"
                android:includeFontPadding="false"
                android:fontFamily="@font/notosans_regular"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="45dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/notosans_bold"
                android:text="얼죽아모임"
                android:includeFontPadding="false"
                android:textColor="#616161"
                android:textSize="15dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingLeft="45dp"
            android:paddingBottom="20dp">

            <ImageButton
                android:id="@+id/trip_member_add_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@android:color/transparent"
                android:includeFontPadding="false"
                android:scaleType="fitCenter"
                android:src="@drawable/img_card_plusmem" />

        </LinearLayout>

    </LinearLayout>


</android.support.v7.widget.CardView>
