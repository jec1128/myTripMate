<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <View
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:background="#ffffff" />

        <TextView
            android:id="@+id/cost_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center"
            android:layout_marginTop="14dp"
            android:lineSpacingExtra="40sp"
            android:text="서울"
            android:textColor="#6ec8fd"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/cost_back"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.6dp"
            android:layout_marginTop="18dp"
            android:background="@android:color/transparent"
            android:maxWidth="6.3dp"
            android:maxHeight="10.8dp"
            android:scaleType="fitStart"
            android:src="@drawable/img_trip_show" />
    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:descendantFocusability="blocksDescendants">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="55dp">

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:background="#f8f8f8" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start|center"
                    android:layout_marginLeft="17.6dp"
                    android:lineSpacingExtra="40sp"
                    android:text="여행준비"
                    android:textColor="#243f4a"
                    android:textSize="16sp" />

                <ImageButton
                    android:id="@+id/trip_cost_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center"
                    android:layout_marginRight="17.6dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/img_planlist_plus" />
            </FrameLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_cost1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rc_cost2"
                android:layout_width="match_parent"
                android:layout_height="305dp" />

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom">

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/total_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="40sp"
                android:text="50000"
                android:textColor="#6ec8fd"
                android:textSize="17sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="40sp"
                android:text="원 지출"
                android:textColor="#6ec8fd"
                android:textSize="16sp" />

        </LinearLayout>


    </FrameLayout>


</LinearLayout>