<?xml version="1.0" encoding="UTF-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sv_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:scrollbars="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true">

            <ImageView
                android:id="@+id/iv_top"
                android:layout_width="wrap_content"
                android:layout_height="230dp"
                android:contentDescription="TODO"
                android:scaleType="fitXY"
                android:src="@drawable/img_main_back" />

            <EditText
                android:id="@+id/et_sch"
                android:layout_width="381dp"
                android:layout_height="32dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="137dp"
                android:background="@drawable/img_main_serchbar"
                android:gravity="center_vertical"
                android:hint="어디갈지 고민이 된다면 검색 해 보세요"
                android:imeOptions="actionSearch"
                android:inputType="text"
                android:lineSpacingExtra="39sp"
                android:paddingLeft="23dp"
                android:privateImeOptions="defaultInputmode=korean"
                android:singleLine="true"
                android:textSize="12sp" />

            <ImageButton
                android:id="@+id/ib_loc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="142.9dp"
                android:layout_marginRight="30.1dp"
                android:adjustViewBounds="true"
                android:background="#FFFFFF"
                android:maxWidth="20dp"
                android:maxHeight="20dp"
                android:scaleType="fitCenter"
                android:src="@drawable/img_main_gps" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="58dp"
                android:paddingLeft="19dp"
                android:text="안녕하세요"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="88dp"
                android:paddingLeft="19dp"
                android:text="김길동님 D-100일 전"
                android:textColor="#FFFFFF"
                android:textSize="25sp" />

            <!-- 여기서부터 다가오는 여행일정 테이블 생성 -->


            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="180dp">

                <!--<androidx.cardview.widget.CardView-->
                <android.support.v7.widget.CardView
                    android:id="@+id/card_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:elevation="0.5dp"
                    app:cardCornerRadius="10dp">


                    <LinearLayout
                        android:layout_width="252dp"
                        android:layout_height="254dp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">
                        //타이틀 부분

                        <RelativeLayout
                            android:layout_width="212dp"
                            android:layout_height="48dp"
                            android:background="@drawable/border_bottom"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="20dp"
                                android:lineSpacingExtra="38sp"
                                android:text="다가오는 여행일정"
                                android:textColor="#4a4a4a"
                                android:textSize="13sp" />

                            <ImageButton
                                android:id="@+id/imageButton1"
                                android:layout_width="7dp"
                                android:layout_height="11dp"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="4dp"
                                android:adjustViewBounds="true"
                                android:padding="0dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img_arrow" />

                        </RelativeLayout>
                        //시작 지역 -> 도착 지역

                        -

                        <RelativeLayout
                            android:layout_width="212dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="96sp"
                                android:text="대구"
                                android:textColor="#66a6ff"
                                android:textSize="22sp" />

                            <ImageView
                                android:layout_width="13.82dp"
                                android:layout_height="12.5dp"
                                android:layout_alignParentLeft="true"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="10dp"
                                android:padding="0dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img_arrow_nolink" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="140dp"
                                android:lineSpacingExtra="96sp"
                                android:text="서울"
                                android:textColor="#66a6ff"
                                android:textSize="22sp" />

                        </RelativeLayout>
                        //날짜 부분

                        -

                        <RelativeLayout
                            android:layout_width="212dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="20dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="103sp"
                                android:text="2019.01.01 ~ 2019.01.05"
                                android:textColor="#444444"
                                android:textSize="15sp" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="212dp"
                            android:layout_height="45dp"
                            android:layout_marginTop="15dp">

                            <ImageButton
                                android:id="@+id/imageButton2"
                                android:layout_width="42dp"
                                android:layout_height="42dp"
                                android:layout_alignParentLeft="true"
                                android:adjustViewBounds="true"
                                android:padding="0dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/img_main_addmember" />

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="212dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:lineSpacingExtra="105sp"
                                android:text="총 예상 비용 : 530,000원"
                                android:textColor="#302e2e"
                                android:textSize="13sp" />

                        </RelativeLayout>

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <!--</androidx.cardview.widget.CardView>-->

            </FrameLayout>

            <!-- 여기서부터 다가오는 여행일정 테이블 끝 -->


        </FrameLayout>

    </LinearLayout>

</ScrollView>